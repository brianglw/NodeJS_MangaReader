<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manga Scraper</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/main.css">
</head>
<body>
    <%- include('partials/header.ejs') %>

    <section class="jumbotron text-center">
        <div class="container">
        <form action="/nsfwQuery" method="post">
            <h1 class="jumbotron-heading">(NSFW) Search by Title: </h1>
            <input class="btn btn-light my-2" type="text" name="title" placeholder="My AR glasses can see various stats about my foster sister ?!"/>
            <input class="btn btn-primary my-2" type="submit" />
        </form>
        <form action="/nsfwRandom" method="post">
            <input class="btn btn-danger my-2" type="submit" value="Randomize"/>
        </form>
        </div>
    </section>
    
    <!-- User Step 2: User clicks on form -> /chapterlist -> renders a list of chapters to chapterlist.ejs -->
    
    <% if (locals?.results) { %>
        <div class="album py-5 bg-light">
            <div class="container">
            <div class="row">
                <% results.forEach(manga => { %>
                <div class="col-md-3">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;" alt="Image not loaded properly" style="display: inline;" src="<%= manga %>" data-holder-rendered="true">
                    <div class="card-body">
                        <p class="card-title"><%=manga.title%> #<%=manga.id%></p>
                        <p class="card-text">Favorites: <%=manga?.favorites%></p>
                        <p class="card-text">Tags: <%manga.tags%></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <form method="post" action="/chapterlist">
                                    <input type="hidden" name="mangaID" value="<%=manga%>"/>
                                    <input type="submit" value="Read" />
                                </form>
                            </div>
                            <small class="text-muted"><%=manga?.status%></small>
                        </div>
                    </div>
                </div>
                </div>
            <% }); %>
            </div>
            </div>
        </div>
    <% } %>
    

    <%- include('partials/footer.ejs') %>
</body>
</html>

